<% flash.each do |key, msg| %>
  <% base = { notice: "bg-green-50 text-green-800 ring-green-200",
              alert:  "bg-red-50 text-red-800 ring-red-200" }[key.to_sym] || "bg-slate-50 text-slate-800 ring-slate-200" %>
  <div class="my-4 rounded-xl px-4 py-3 ring-1 <%= base %>">
    <%= msg %>
  </div>
<% end %>
