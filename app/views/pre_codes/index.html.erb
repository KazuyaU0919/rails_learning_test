<!-- app/views/pre_codes/index.html.erb -->
<main class="mx-auto max-w-2xl p-6">
  <h1 class="text-2xl font-bold mb-4">My PreCodes</h1>

  <% if @pre_codes.any? %>
    <ul class="space-y-3">
      <% @pre_codes.each do |pc| %>
        <li class="border rounded p-3">
          <div class="font-semibold"><%= pc.title %></div>
          <%# 必要なら抜粋など %>
          <div class="text-sm text-slate-600"><%= truncate(pc.description, length: 80) %></div>
        </li>
      <% end %>
    </ul>

    <div class="mt-6"><%= paginate @pre_codes %></div>
  <% else %>
    <p>まだ PreCode はありません。</p>
  <% end %>
</main>
